{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6"
    ],
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "incremental": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "#app/*": ["*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
